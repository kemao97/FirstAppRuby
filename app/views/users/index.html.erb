<% provide :title, t("user.index.title") %>
<p id="notice"><%= notice %></p>

<h1><%= t("user.index.header") %></h1>

<table>
  <thead>
    <tr>
      <th><%= t("user.index.field.name") %></th>
      <th><%= t("user.index.field.email") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to t("user.index.table.show"), user %></td>
        <td><%= link_to t("user.index.table.edit"), edit_user_path(user) %></td>
        <td>
          <%= link_to t("user.index.table.destroy"),
                      user,
                      method: :delete,
                      data: { confirm: t("user.index.table.destroy_confirm") }
          %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("user.index.table.new"), new_user_path %>
