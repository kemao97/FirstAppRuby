<% provide :title, t(".title") %>
<p id="notice"><%= notice %></p>

<h1><%= t ".header" %></h1>

<table>
  <thead>
    <tr>
      <th><%= t ".field.name" %></th>
      <th><%= t ".field.email" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to t(".table.show"), user %></td>
        <td><%= link_to t(".table.edit"), edit_user_path(user) %></td>
        <td><%= link_to t(".table.destroy"), user, method: :delete,
          data: { confirm: t(".table.destroy_confirm") } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t(".table.new"), new_user_path %>
