<% provide :title, t(".title") %>
<h1><%= t ".header" %></h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: Settings.views.users.index.gravatar_size %>
      <%= link_to user.name, user %>
      <% if current_user.admin? && !current_user?(user) %>
        | <%= link_to t(".delete"), user, method: :delete, data: { confirm: "You sure?" } %>
      <% end %>
    </li>
  <% end %>
</ul>
<div class="text-center">
  <%= paginate @users, theme: "twitter-bootstrap-3" %>
</div>
