<% provide :title, t(".title") %>
<p id="notice"><%= notice %></p>

<h1><%= t ".header" %></h1>

<table>
  <thead>
    <tr>
      <th><%= t ".field.content" %></th>
      <th><%= t ".field.user" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @microposts.each do |micropost| %>
      <tr>
        <td><%= micropost.content %></td>
        <td><%= micropost.user_id %></td>
        <td><%= link_to t(".table.show"), micropost %></td>
        <td><%= link_to t(".table.edit"),
          edit_micropost_path(micropost) %></td>
        <td><%= link_to t(".table.destroy"), micropost, method: :delete,
          data: { confirm: t(".table.destroy_confirm") } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t(".table.new"), new_micropost_path %>
