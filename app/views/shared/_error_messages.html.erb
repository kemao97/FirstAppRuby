<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= raw "#{t(".base_error")} #{pluralize(object.errors.size, t(".errors"))}" %>.
    </div>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
